<h1>Busqueda Recetas</h1>
 
<%= form_for search_path, method: :get do |f| %>
  <p>
    <%= f.label "Search for" %>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Go", name: nil %>
  </p>
<% end %>
 
<ul>
  <% @recetas.each do |receta| %>
    <li>
      <h3>
        <%= link_to receta.titulo, controller: "recetas", action: "show", id: receta._id%>
      </h3>
    </li>
  <% end %>
</ul>